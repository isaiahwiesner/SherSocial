<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%- include('../partials/head.ejs', {title: "Search Results"}) %>
</head>

<body>
  <%- include('../partials/components/nav.ejs', {currentPage: "search"}) %>
  <main class="container py-2 my-3">
    <h1 class="text-center mb-3">Search Results</h1>
    <form class="input-group w-100 mb-3 m-auto" id="search-form" style="max-width: 60rem;">
      <input type="text" class="form-control" id="search-input" autocomplete="off" placeholder="Search by title, name, username, user ID, or post ID">
      <button type="submit" class="btn btn-secondary" id="search-btn"><i class="fa-solid fa-magnifying-glass"></i></button>
    </form>
    <section id="posts" class="d-flex flex-column flex-lg-wrap flex-lg-row align-items-center justify-content-lg-center gap-3 w-100 m-auto" style="max-width: 60rem;">
    </section>
  </main>
  <%- include('../partials/scripts.ejs') %>
  <script src="/shersocial/static/js/pages/search.js"></script>
</body>


</html>