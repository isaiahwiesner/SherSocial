<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%- include('../../partials/head.ejs', {title: "Users - Admin Dashboard"}) %>
</head>

<body>
  <%- include('../../partials/components/nav.ejs', {currentPage: "admin"}) %>
  <main class="container py-2">
    <section class="card m-auto" style="max-width: 50rem;">
      <%- include('../../partials/components/adminNav.ejs', {currentAdminPage: "users"}) %>
      <section class="card-body container">
        <section class="d-flex flex-column gap-3">
          <form class="input-group" id="search-form">
            <a class="btn btn-primary" href="/shersocial/admin/users/add" role="button">Add</a>
            <input type="text" class="form-control" placeholder="Search by name, username, or user ID..." id="search-input" autocomplete="off">
            <section class="dropdown">
              <button type="button" class="btn btn-outline-primary rounded-0" id="search-btn" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fa-solid fa-bars"></i>
              </button>
              <ul class="dropdown-menu">
                <li class="px-3 d-flex flex-row gap-2 align-items-center flex-nowrap">
                  <label class="m-0 text-nowrap">Results Per Page:</label>
                  <select class="form-control" style="width: 60px;" id="search-results-perpage">
                    <option value="5">5</option>
                    <option value="10" selected>10</option>
                    <option value="25">25</option>
                    <option value="50">50</option>
                  </select>
                </li>
              </ul>
            </section>
            <button type="submit" class="btn btn-secondary" id="search-btn"><i class="fa-solid fa-magnifying-glass"></i></button>
          </form>
          <section>
            <table class="table table-striped mb-2">
              <thead>
                <tr>
                  <th>Username</th>
                  <th>Name</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody id="search-results">
              </tbody>
              <tfoot id="search-footer"></tfoot>
            </table>
            <p class="m-0 text-center" id="perpage-text"></p>
          </section>
        </section>
      </section>
    </section>
  </main>

  <!-- Delete User Confirmation Modal -->
  <section class="modal fade" id="deleteUserModal" tabindex="-1" aria-labelledby="deleteUserModalLabel" aria-hidden="true">
    <section class="modal-dialog">
      <section class="modal-content">
        <!-- Modal Header -->
        <section class="modal-header">
          <h1 class="modal-title fs-5" id="deleteUserModalLabel">Delete <span id="delete-modal-username"></span></h1>
        </section>
        <!-- Modal Body -->
        <section class="modal-body">
          <p>Are you sure you want to delete this user?</p>
          <section class="d-flex flex-column gap-3">
            <button type="button" class="btn btn-primary" data-bs-dismiss="modal" id="cancel-delete-user-confirm">No</button>
            <button type="button" class="btn btn-danger" data-bs-dismiss="modal" id="delete-user-confirm">Yes</button>
          </section>
        </section>
      </section>
    </section>
  </section>

  <%- include('../../partials/scripts.ejs') %>
  <script src="/shersocial/static/js/pages/admin/adminUsers.js"></script>
</body>


</html>